
@{
    ViewBag.Title = "CreateCourse";
}

@section SideBar {
    <h4>@Html.ActionLink("Home", "Index", "Home")</h4>
    <hr />
    <li>@Html.ActionLink("Add Course", "CreateCourse", "Admins")</li>
    <li>@Html.ActionLink("Add User", "AddUser", "Admins")</li>
    <li>@Html.ActionLink("Add users from Centris", "AddUsersFromCentris", "Admins")</li>
    <hr />
}
<h2>CreateCourse</h2>
<hr />
<div class="col-lg-6">
    @using (Html.BeginForm("CreateCourse", "Admins", new { @class = "form form-control" })) {
        <div class="form-group">
            <label for="coursenumber">Course Number</label>
            <input type="text" class="form-control" id="coursenumber" name="coursenumber" placeholder="Course Number">
        </div>
        <div class="form-group">
            <label for="course_name">Course Name</label>
            <input type="text" class="form-control" id="course_name" name="coursename" placeholder="Course Name">
        </div>

        <input type="submit" class="btn btn-default" value="Add Course"/>
    }
</div>

@section Copyright {
    <hr />
    <p>&copy; @DateTime.Now.Year - MooSharp</p>
}