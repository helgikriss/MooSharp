@model MooSharp.Models.ViewModels.CourseIdViewModel

@{
    ViewBag.Title = "Create Assignment";
}

@section SideBar {
    <h4>@Html.ActionLink("Home", "Index", "Home")</h4>
    <hr />
    <li>@Html.ActionLink("Forritun", "CourseDetails", "Teachers", new { id = "3" }, null)</li>
    @for (var i = 0; i < 3; i++) {
        <li> @Html.ActionLink("link " + @i, "Index", "Teachers") </li>
    }
    <hr />
}

<h2>Create Assignment</h2>
<hr />
<div class="col-lg-6">
    @using (Html.BeginForm("CreateAssignment", "Teachers", new { @class = "form form-control" })) {
        <div class="form-group">
            <label for="assignmentname">Assignment Name</label>
            <input type="text" class="form-control" rows="5 "id="assignmentname" name="assignmentname" placeholder="Assignment Name">
        </div>
        <div class="form-group">
            <label for="assignmentdescription">Assignment Description</label>
            <textarea type="text" class="form-control" rows="10" id="assignmentdescription" name="assignmentdescription" placeholder="Assignment Description"></textarea>
        </div>

        <input type="submit" class="btn btn-default" value="Add Assignment" />
    }
</div>

@section Copyright {
    <hr />
    <p>&copy; @DateTime.Now.Year - MooSharp</p>
}