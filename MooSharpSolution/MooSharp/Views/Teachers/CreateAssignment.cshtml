@model MooSharp.Models.ViewModels.CourseIdViewModel

@{
    ViewBag.Title = "Create Assignment";
}

<h2>Create Assignment</h2>

@using (Html.BeginForm("CreateAssignment", "Teachers", new { @class = "form form-control" })) {
    <input type="text" id="assignmentname" name="assignmentname" placeholder="Assignment Name" /> <br />
    <input type="text" id="courseid" name="courseid" value="@Model.ID" hidden/>
    <textarea type="text" id="assignmentdescription" name="assignmentdescription" placeholder="Assignment Description"></textarea> <br />
    <input type="submit" class="btn btn-default" value="Add Assignment" />
}