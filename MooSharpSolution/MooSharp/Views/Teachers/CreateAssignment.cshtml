@model MooSharp.Models.ViewModels.AssignmentViewModel
@{
    ViewBag.Title = "CreateAssignment";
}

<h2>CreateAssignment</h2>

@using (Html.BeginForm("CreateCourse", "Admins")) {
    <input type="text" name="course_id" value="@Model.CourseID" disabled/>
    <textarea name="assignment_description" placeholder="Description"></textarea>
    <input type="text" name="assignment_title" placeholder="Title" />
    <input type="submit" class="btn btn-default" />
}

