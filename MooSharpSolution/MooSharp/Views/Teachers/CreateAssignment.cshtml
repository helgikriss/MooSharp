@model MooSharp.Models.ViewModels.CreateAssignmentViewModel

@{
    ViewBag.Title = "Create Assignment";
}

@section SideBar {
    <h4>@Html.ActionLink("Home", "Index", "Home")</h4>
    <hr />
    <li>@Html.ActionLink("Forritun", "CourseDetails", "Teachers", new { id = "3" }, null)</li>
    @for (var i = 0; i < 3; i++) {
        <li> @Html.ActionLink("link " + @i, "Index", "Teachers") </li>
    }
    <hr />
}

<h2>Create Assignment</h2>
<hr />
<div class="col-lg-10   ">
    @using (Html.BeginForm("CreateAssignment", "Teachers", FormMethod.Post, new { @class = "form form-horizontal", role = "form" })) {
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <!--Title-->
        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
        </div>
        <!--Description-->
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows="10" })
            </div>
        </div>
        <!--Opening Time-->
        <div class="form-group">
            @Html.LabelFor(model => model.OpeningDate, new { @class = "col-md-3 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.OpeningDate, new { @class = "form-control", @type="date" })
            </div>
            @Html.LabelFor(model => model.OpeningTime, new { @class = "col-md-2 control-label" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.OpeningTime, new { @class = "form-control", @pattern = "([01]?[0-9]|2[0-3]):[0-5][0-9]" })
            </div>
        </div>
        <!--Closing time-->
        <div class="form-group">
            @Html.LabelFor(model => model.ClosingDate, new { @class = "col-md-3 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.ClosingDate, new { @class = "form-control", @type = "date" })
            </div>
            @Html.LabelFor(model => model.ClosingTime, new { @class = "col-md-2 control-label" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.ClosingTime, new { @class = "form-control", @pattern = "([01]?[0-9]|2[0-3]):[0-5][0-9]" })
            </div>
        </div>
         <!--Submit Button-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add Assignment" />
            </div>
        </div>
        <div class="form-group">
                @Html.TextBoxFor(model => model.CourseID, new { @class = "form-control", @rows = "10", @type = "hidden" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}