@using MooSharp.Models.ViewModels
@model MooSharp.Models.ViewModels.Teachers.TeacherIndexViewModel
@{
    ViewBag.Title = "Teachers home page";
}

@section SideBar {
    <h4>@Html.ActionLink("Home", "Index", "Home")</h4>
    <hr />
    <li>@Html.ActionLink("Forritun", "CourseDetails", "Teachers", new { id = "3" }, null)</li>
    @for (var i = 0; i < 3; i++) {
        <li> @Html.ActionLink("link " + @i, "Index", "Teachers") </li>
    }
    <hr />
}

<h2>@ViewBag.Title</h2>
<hr />
<h3>Courses</h3>
<hr />
<!--<div class="well">-->
    <div class="row">
        @foreach(CourseViewModel course in Model.MyCourses) {

            <div class="col-lg-3">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>@course.Title</h3></div>
                    <div class="panel-body">
                        <ul>
                            <li><strong>Course number:   </strong> @course.CourseNumber</li>
                        </ul>
                        <a href="@Url.Action("CreateAssignment", "Teachers", new { courseID = course.ID })"></a> 
                    </div>
                </div>
            </div>
            
        }
    </div>
<!--</div>-->
        


    @section Copyright {
        <hr />
        <p>&copy; @DateTime.Now.Year - MooSharp</p>
    }
