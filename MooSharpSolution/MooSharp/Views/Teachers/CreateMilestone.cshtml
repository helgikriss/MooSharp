@model MooSharp.Models.ViewModels.Teachers.CreateMilestoneViewModel

@{
    ViewBag.Title = "CreateMilestone";
}

<h2>Create Milestone for @Model.AssignmentTitle</h2>

<div class="col-lg-10   ">
    @using (Html.BeginForm("CreateMilestone", "Teachers", FormMethod.Post, new { @class = "form form-horizontal", role = "form" })) {
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "10" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                Total weight of milestones in @Model.AssignmentTitle is @Model.TotalWeightOfMilestones%
            </div>
        </div>
        <div class="form-group">
            
            @Html.LabelFor(model => model.Weight, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Weight, new { @class = "form-control", @min = "0", @max = "100" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add Milestone" />
            </div>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.AssignmentID, new { @class = "form-control", @rows = "10", @type = "hidden" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}